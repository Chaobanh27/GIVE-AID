@model GIVE_AID.Areas.Admin.Models.DonationsListModel

@{
    ViewBag.Title = "Details";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutPage1.cshtml";
}

<section class="my-profile mt-5">
    <div class="container py-5">
        <div class="row ">
            <div class="col-lg-12" style="max-height: 700px;">
                <div class="card mb-4" style="box-shadow: rgba(0, 0, 0, 0.24) 0px 3px 8px;">
                    <div class="card-body text-center ">
                        <h5 class="my-3">
                            @Html.DisplayFor(model => model.Username)
                        </h5>
                        <p class="text-muted mb-1">Developer</p>
                        <p class="text-muted mb-4">Da Nang</p>
                        <div class="d-flex justify-content-center mb-2">
                            <button type="button" class="btn btn-primary ms-1">Message</button>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-12 " style="max-height: 700px;">
                <div class="card mb-4" style="box-shadow: rgba(0, 0, 0, 0.24) 0px 3px 8px;">
                    <div class="card-body ">
                        <div class="row">
                            <div class="col-sm-3">
                                <p class="mb-0 text-primary">Donation Detail</p>
                            </div>
                            <div class="col-sm-9">
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <p class="mb-0">Username</p>
                            </div>
                            <div class="col-sm-9">
                                <p class="text-muted mb-0">
                                    @Html.DisplayFor(model => model.Username)
                                </p>
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <p class="mb-0">Cause Name</p>
                            </div>
                            <div class="col-sm-9">
                                <p class="text-muted mb-0">
                                    @Html.DisplayFor(model => model.CauseName)
                                </p>
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <p class="mb-0">Amount</p>
                            </div>
                            <div class="col-sm-9">
                                <p class="text-muted mb-0">
                                    $@Html.DisplayFor(model => model.Amount)
                                </p>
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <p class="mb-0">Date Of Birth</p>
                            </div>
                            <div class="col-sm-9">
                                <p class="text-muted mb-0">
                                    @Html.DisplayFor(model => model.DonationDate)
                                </p>
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <p class="mb-0">UserId</p>
                            </div>
                            <div class="col-sm-9">
                                <p class="text-muted mb-0">
                                    @Html.DisplayFor(model => model.UserId)
                                </p>
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <p class="mb-0">CauseId</p>
                            </div>
                            <div class="col-sm-9">
                                <p class="text-muted mb-0">
                                    @Html.DisplayFor(model => model.CauseId)
                                </p>
                            </div>
                        </div>

                    </div>
                </div>

            </div>
        </div>
    </div>

</section>
<div>
    @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-primary " })
</div>
