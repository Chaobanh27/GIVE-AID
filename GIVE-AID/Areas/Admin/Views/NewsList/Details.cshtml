@model GIVE_AID.Models.News

@{
    ViewBag.Title = "Detail";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutPage1.cshtml";
}
<section class="news" style="margin-top:100px">
    <div class="container">
        <div class="text-center mb-5 ">
            <h1>@Model.Title</h1>
            <div class="mt-3 "><p>By @Model.Author  |  <span class="text-black-50">@Model.CreatedDate</span></p></div>
            <hr class="mx-auto w-50">
        </div>
        <div class="text w-75 mx-auto">
            <p>@Model.Description</p>
            @*dùng html.raw() để chuyển source html tags từ ckeditor sang plain text*@
            <p>
                @Html.Raw(@Model.Content)
            </p>
        </div>
        <hr class="mx-auto w-50">
    </div>
</section>