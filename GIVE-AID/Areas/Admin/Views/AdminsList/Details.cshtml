@model GIVE_AID.Areas.Admin.Models.UserListModel

@{
    ViewBag.Title = "Details";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutPage1.cshtml";
}

<section class="my-profile mt-5">
    <div class="container py-5">
        <div class="row ">
            <div class="col-lg-4" style="max-height: 700px;">
                <div class="card mb-4" style="box-shadow: rgba(0, 0, 0, 0.24) 0px 3px 8px;">
                    <div class="card-body text-center ">
                        <img src="~/Assets/Server/MyProfile/assets/images/boy.png" alt="avatar"
                             class="rounded-circle img-fluid" style="width: 150px;">
                        <h5 class="my-3">
                            @Html.DisplayFor(model => model.Username)
                        </h5>
                        <p class="text-muted mb-1">Developer</p>
                        <p class="text-muted mb-4">Da Nang</p>
                        <div class="d-flex justify-content-center mb-2">
                            <button type="button" class="btn btn-primary ms-1">Message</button>
                        </div>
                    </div>
                </div>
                <div class="card mb-4 mb-lg-0" style="box-shadow: rgba(0, 0, 0, 0.24) 0px 3px 8px; min-height: 295px;">
                    <div class="card-body p-0">
                        <ul class="list-group list-group-flush rounded-3">
                            <li class="list-group-item d-flex justify-content-between align-items-center p-3">
                                <i class="fas fa-globe fa-lg text-warning"></i>
                                <a class="mb-0">Link</a>
                            </li>
                            <li class="list-group-item d-flex justify-content-between align-items-center p-3">
                                <i class="fab fa-github fa-lg" style="color: #333333;"></i>
                                <a class="mb-0">Link</a>
                            </li>
                            <li class="list-group-item d-flex justify-content-between align-items-center p-3">
                                <i class="fab fa-twitter fa-lg" style="color: #55acee;"></i>
                                <a class="mb-0">Link</a>
                            </li>
                            <li class="list-group-item d-flex justify-content-between align-items-center p-3">
                                <i class="fab fa-instagram fa-lg" style="color: #ac2bac;"></i>
                                <a class="mb-0">Link</a>
                            </li>
                            <li class="list-group-item d-flex justify-content-between align-items-center p-3" style="min-height: 60.23px;">
                                <i class="fab fa-facebook-f fa-lg" style="color: #3b5998;"></i>
                                <a class="mb-0">Link</a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
            <div class="col-lg-8 " style="max-height: 700px;">
                <div class="card mb-4" style="box-shadow: rgba(0, 0, 0, 0.24) 0px 3px 8px;">
                    <div class="card-body ">
                        <div class="row">
                            <div class="col-sm-3">
                                <p class="mb-0 text-primary">User Profile</p>
                            </div>
                            <div class="col-sm-9">
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <p class="mb-0">Username </p>
                            </div>
                            <div class="col-sm-9">
                                <p class="text-muted mb-0">
                                    @Html.DisplayFor(model => model.Username)
                                </p>
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <p class="mb-0">Full Name</p>
                            </div>
                            <div class="col-sm-9">
                                <p class="text-muted mb-0">
                                    @Html.DisplayFor(model => model.FullName)
                                </p>
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <p class="mb-0">Gender</p>
                            </div>
                            <div class="col-sm-9">
                                <p class="text-muted mb-0">
                                    @Html.DisplayFor(model => model.Gender)
                                </p>
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <p class="mb-0">Date Of Birth</p>
                            </div>
                            <div class="col-sm-9">
                                <p class="text-muted mb-0">
                                    @Html.DisplayFor(model => model.DateOfBirth)
                                </p>
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <p class="mb-0">Email</p>
                            </div>
                            <div class="col-sm-9">
                                <p class="text-muted mb-0">
                                    @Html.DisplayFor(model => model.Email)
                                </p>
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <p class="mb-0">Phone</p>
                            </div>
                            <div class="col-sm-9">
                                <p class="text-muted mb-0">
                                    @Html.DisplayFor(model => model.Phone)
                                </p>
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <p class="mb-0">Address</p>
                            </div>
                            <div class="col-sm-9">
                                <p class="text-muted mb-0">
                                    @Html.DisplayFor(model => model.Address)
                                </p>
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <p class="mb-0">Date Created</p>
                            </div>
                            <div class="col-sm-9">
                                <p class="text-muted mb-0">
                                    @Html.DisplayFor(model => model.CreatedDate)
                                </p>
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <p class="mb-0">Role</p>
                            </div>
                            <div class="col-sm-9">
                                <p class="text-muted mb-0">
                                    @Html.DisplayFor(model => model.RoleName)
                                </p>
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <p class="mb-0">Password</p>
                            </div>
                            <div class="col-sm-9">
                                <p class="text-muted mb-0">
                                    @Html.DisplayFor(model => model.Password)
                                </p>
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <p class="mb-0">Back-end</p>
                            </div>
                            <div class="col-sm-9">
                                <p class="text-muted mb-0">C#,Asp.net Mvc,Asp.net Web API,Ado.net,Sql Server,Html 5,Css 3,Boostrap 5,Javascript</p>
                            </div>
                        </div>

                    </div>
                </div>

            </div>
        </div>
    </div>
</section>
<div>
    @Html.ActionLink("Edit", "Edit", new { id = Model.Id }, new { @class = "btn btn-success " })
    @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-primary " })
</div>

